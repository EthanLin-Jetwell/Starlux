public without sharing class ExternalTicketLoginUtility {
    private static final Integer COOKIE_MAX_AGE = 86400; // 24h
    private static final String  COOKIE_PATH    = '/';
    private static final Boolean COOKIE_SECURE  = false; // 需全站 HTTPS 再改 true

    public static Account getAccount(String ct, String dc, String vc) {
        List<Account> accs = [
            SELECT Id, Company_type__c, Department_Code__c, Login_Code__c
            FROM Account
            WHERE Company_type__c = :ct
              AND Department_Code__c = :dc
              AND Login_Code__c     = :vc
            LIMIT 1
        ];
        return accs.isEmpty() ? null : accs[0];
    }

    // 1) 直接用查到的 Account 寫入 cookie（跨頁）
    public static void saveAccountLoginCookie(Account acc) {
        if (acc == null) return;

        // 為避免特殊字元，保險起見做 URL encode
        String ct = EncodingUtil.urlEncode(String.valueOf(acc.Company_type__c), 'UTF-8');
        String dc = EncodingUtil.urlEncode(String.valueOf(acc.Department_Code__c), 'UTF-8');
        String lc = EncodingUtil.urlEncode(String.valueOf(acc.Login_Code__c), 'UTF-8');

        Cookie c1 = new Cookie('Company_type__c',    ct, COOKIE_PATH, COOKIE_MAX_AGE, COOKIE_SECURE);
        Cookie c2 = new Cookie('Department_Code__c', dc, COOKIE_PATH, COOKIE_MAX_AGE, COOKIE_SECURE);
        Cookie c3 = new Cookie('Login_Code__c',      lc, COOKIE_PATH, COOKIE_MAX_AGE, COOKIE_SECURE);

        ApexPages.currentPage().setCookies(new Cookie[]{ c1, c2, c3 });
    }

    // 2) 用 accountId 載入後寫入 cookie（可在只有 Id 的地方呼叫）
    public static void saveAccountLoginCookieById(Id accountId) {
        if (accountId == null) return;
        Account acc = [
            SELECT Id, Company_type__c, Department_Code__c, Login_Code__c
            FROM Account
            WHERE Id = :accountId
            LIMIT 1
        ];
        saveAccountLoginCookie(acc);
    }

    // 3) 登出/清除 cookie：設 maxAge=0 並覆寫 path='/'
    public static void clearAccountLoginCookie() {
        Cookie c1 = new Cookie('Company_type__c',    '', COOKIE_PATH, 0, COOKIE_SECURE);
        Cookie c2 = new Cookie('Department_Code__c', '', COOKIE_PATH, 0, COOKIE_SECURE);
        Cookie c3 = new Cookie('Login_Code__c',      '', COOKIE_PATH, 0, COOKIE_SECURE);
        ApexPages.currentPage().setCookies(new Cookie[]{ c1, c2, c3 });
    }
    
