public without sharing class ExternalTicketQuotaStatisticsController {
    public String companyType { get; set; }
    public String departmentCode { get; set; }
    public String loginCode { get; set; }

    public List<String> discountCodes { get; set; }
    public List<String> discountRows { get; set; }
    public Map<String, Map<String, QuotaData>> quotaMap { get; set; }

    public ExternalTicketQuotaStatisticsController() {
        // 讀取 Cookie
        Map<String, Cookie> ck = ApexPages.currentPage().getCookies();
        if (ck.containsKey('Company_type__c'))
            companyType = EncodingUtil.urlDecode(ck.get('Company_type__c').getValue(), 'UTF-8');
        if (ck.containsKey('Department_Code__c'))
            departmentCode = EncodingUtil.urlDecode(ck.get('Department_Code__c').getValue(), 'UTF-8');
        if (ck.containsKey('Login_Code__c'))
            loginCode = EncodingUtil.urlDecode(ck.get('Login_Code__c').getValue(), 'UTF-8');

        // 設定橫向欄位（X 軸）與縱向欄位（Y 軸）
        discountCodes = new List<String>{ 'AD', 'DM', 'RG' ,'GE' ,'ID','DG'};
        discountRows = new List<String>{ '00', '50', '75', '90' };

        quotaMap = new Map<String, Map<String, QuotaData>>();

        // 初始化所有 row × code，預設為 '-'
        for (String row : discountRows) {
            Map<String, QuotaData> rowMap = new Map<String, QuotaData>();
            for (String code : discountCodes) {
                rowMap.put(code, new QuotaData('-', '-', '-', '-'));
            }
            quotaMap.put(row, rowMap);
        }

        try {
            // 查詢 Account
            Account acc = [
                SELECT Id ,ParentId
                FROM Account
                WHERE Company_type__c = :companyType
                  AND Department_Code__c = :departmentCode
                LIMIT 1
            ];
            // 查詢 子Account 若無則搜尋自己
            String targetIds;
            if(acc.ParentId!=null)
            {
            	targetIds = acc.ParentId;
            }else{
                targetIds = acc.Id;
            }
			
            System.debug(targetIds);
            // 查詢 Quota_Manage__c 並覆蓋初始化資料
            for (Quota_Manage__c qm : [
                SELECT Discount_Code__c, Quota_Total__c, Quota_Used__c, Quota_Remain__c, Discount__c, Quota_Transit__c
                FROM Quota_Manage__c
                WHERE Account__c = :targetIds
                  AND Active__c = TRUE
            ]) {
                if (quotaMap.containsKey(qm.Discount__c) &&
                    quotaMap.get(qm.Discount__c).containsKey(qm.Discount_Code__c)) {
                    quotaMap.get(qm.Discount__c).put(
                        qm.Discount_Code__c,
                        new QuotaData(
                            String.valueOf(qm.Quota_Total__c),
                            String.valueOf(qm.Quota_Transit__c),
                            String.valueOf(qm.Quota_Used__c),
                            String.valueOf(qm.Quota_Remain__c)
                        )
                    );
                }
            }
        } catch (Exception e) {
            System.debug('查詢 Quota 資料時發生錯誤: ' + e.getMessage());
        }
    }
    
	//沒有Cookie則導回首頁
    public PageReference ensureAuth() {
        if (String.isBlank(companyType) || String.isBlank(departmentCode) || String.isBlank(loginCode)) {
            PageReference p = Page.ExternalTicketLogin;
            p.setRedirect(true);
            return p; // 直接中止本頁渲染並跳轉
        }
        return null; // 繼續渲染本頁
    }
    
    // 登出
    public PageReference logout() {
        ExternalTicketLoginUtility.clearAccountLoginCookie();
        PageReference p = Page.ExternalTicketLogin;
        p.getParameters().put('toast', 'logout');
        p.setRedirect(true);
        return p;
    }

