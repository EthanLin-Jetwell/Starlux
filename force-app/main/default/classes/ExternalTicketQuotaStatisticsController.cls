    public class QuotaData {
        public String total { get; set; }
        public String transit { get; set; }
        public String used { get; set; }
        public String remain { get; set; }
        public QuotaData(String t, String tr, String u, String r) {
            total = t; 
            transit = tr;
            used = u; 
            remain = r;
        }
    }
