    @HttpPost
    global static void getTicketedPnr() {
        RestRequest request = RestContext.request;
        RestResponse response = RestContext.response;        

        List<GetTicketedPnrWrapper> requestBodyWrapper = GetTicketedPnrWrapper.deserializeJson(request.requestBody.toString());
        List<GetTicketedPnrWrapper> responsebodyWrapper = new List<GetTicketedPnrWrapper>();
        
        for (GetTicketedPnrWrapper wrapper : requestBodyWrapper) {
            if (wrapper.isMissingRequiredFields()) {
                response = ResponseUtil.buildErrorRestResponse(response, Constants.MISSING_REQUIRED_FIELD);
                ApiLogger.log(request, response);
                return;
            }   
        }
               
        for (GetTicketedPnrWrapper wrapper : requestBodyWrapper) {
            //Convert datetime and offset
            String offsetSign = wrapper.offset.left(1)=='+'||wrapper.offset.left(1)=='-' ? wrapper.offset.left(1)=='+'? '-' : '+' : '-';
            Integer offsetHours = Integer.valueOf(offsetSign + wrapper.offset.substring(1,3));
            Integer offsetMinutes = Integer.valueOf(offsetSign + wrapper.offset.right(2));
            Datetime issuedTime_start = DateTime.valueOfGmt(wrapper.issue_date +' 00:00:00').addHours(offsetHours).addMinutes(offsetMinutes);//2021-08-10 00:00:00
            Datetime issuedTime_end =  DateTime.valueOfGmt(wrapper.issue_date +' 23:59:59').addHours(offsetHours).addMinutes(offsetMinutes);//2021-08-10 23:59:59
            
            //Get Records
            List<Seat_Allocation_and_Ticketing__c> searchSat = [SELECT Id, Name, Booking_Reference_PNR__c,Case_ID__r.CaseNumber, Tour_Code__c, Contact__r.IATA_MSO_Code__c, 
            Group_Booking_Route__c,Final_Allocated_Seats__c, Departing_Flight_Number__c, Departing_Flight_Date__c, Returning_Flight_Number__c, Returning_Flight_Date__c 
             FROM Seat_Allocation_and_Ticketing__c             
            WHERE Issue_Ticket_Time__c >= :issuedTime_start and Issue_Ticket_Time__c <= :issuedTime_end];
            // WHERE Issue_Ticket_Time__c >= 2021-04-12T00:00:00+08:00 and Issue_Ticket_Time__c <= 2021-04-12T23:59:59+08:00];
            
            //Create basic reesponse field
            GetTicketedPnrWrapper responseWrapper = new GetTicketedPnrWrapper(); 
            responseWrapper.status = Constants.PICKLIST_STATUS_SUCCEEDED;
            responseWrapper.message = searchSat.size()>0 ? null : Constants.MESSAGE_NO_RECORDS_FOUND;
            responseWrapper.issue_date = wrapper.issue_date;
            responseWrapper.offset = 'start(GMT):'+string.valueOf(issuedTime_start)+' end(GMT):'+string.valueOf(issuedTime_end); 
            responseWrapper.pnrlist = new List<GetTicketedPnrWrapper.pnrlist>();
            
            //Create pnrlist            
            for(Seat_Allocation_and_Ticketing__c currSat : searchSat){  
                 
                GetTicketedPnrWrapper.pnrlist currPnrlist = new GetTicketedPnrWrapper.pnrlist();
                currPnrlist.pnr = currSat.Booking_Reference_PNR__c;
                currPnrlist.caseNo = currSat.Case_ID__r.CaseNumber;
                currPnrlist.tour_code = currSat.Tour_Code__c;
                currPnrlist.iata_mso_code = currSat.Contact__r.IATA_MSO_Code__c;
                currPnrlist.final_allocated_seats = String.valueOf(currSat.Final_Allocated_Seats__c);
                currPnrlist.segment = new List<GetTicketedPnrWrapper.segment>(); 
                
                //Create segment         
                List<String> routeSplit = new List<String>();
                Integer routeCount = 0;
                if (currSat.Group_Booking_Route__c.contains('one-way')) {
                    routeSplit.add(currSat.Group_Booking_Route__c.substring(0, 7));
                    routeCount = 1;
                }else if(currSat.Group_Booking_Route__c.contains(' X ')){
                    routeSplit = currSat.Group_Booking_Route__c.split(' X ');
                    routeCount = 2;
                }
                else {
                    routeSplit.add(currSat.Group_Booking_Route__c.substring(0, 7));
                    routeSplit.add(currSat.Group_Booking_Route__c.substring(4, currSat.Group_Booking_Route__c.length()));
                    routeCount = 2;
                }                
                
                for(Integer i=1 ; i<=routeCount ; i++){                    
                    GetTicketedPnrWrapper.segment currSegment = new GetTicketedPnrWrapper.segment();                    
                    if(i==1){
                        //segment 1
                        currSegment.sorting = i;
                        currSegment.route = routeSplit[0];
                        currSegment.flight_no = currSat.Departing_Flight_Number__c == 'none'? currSat.Returning_Flight_Number__c : currSat.Departing_Flight_Number__c;
                        currSegment.flight_date = currSat.Departing_Flight_Number__c == 'none'? String.valueOf(currSat.Returning_Flight_Date__c).replace('-', '/') : String.valueOf(currSat.Departing_Flight_Date__c).replace('-', '/');
                        currPnrlist.segment.add(currSegment);
                    }else if(i==2){
                        //segment 2                        
                        currSegment.sorting = i;
                        currSegment.route = routeSplit[1];
                        currSegment.flight_no = currSat.Returning_Flight_Number__c;
                        currSegment.flight_date = String.valueOf(currSat.Returning_Flight_Date__c).replace('-', '/');
                        currPnrlist.segment.add(currSegment);       
                    }
                }              
                responseWrapper.pnrlist.add(currPnrlist);
            }
            responsebodyWrapper.add(responseWrapper);  
        }         
        response.statusCode = 200;
        response.addHeader('Content-Type', 'application/json');
        response.responseBody = ResponseUtil.buildBlobFromString(JSON.serialize(responsebodyWrapper));
        //response.responseBody = Blob.valueOf(returnStr);
    }
