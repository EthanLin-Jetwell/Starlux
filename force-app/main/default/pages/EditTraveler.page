  function toISO(d){
    const z = n => String(n).padStart(2,'0');
    return d.getFullYear() + '-' + z(d.getMonth()+1) + '-' + z(d.getDate());
  }

  // ===== Ë¶èÂâáÔºöÁîüÊó• min/maxÔºà‰æù pt ËàáÂá∫ÁôºÊó• depDate Ë®≠Ôºâ=====
  function setDOBRange(inp, depDate){
    const pt = (inp.getAttribute('data-pt') || '').toUpperCase(); // ADT/CHD/INF
    const d = new Date(depDate);
    const c = (dt)=>new Date(dt.getTime());
    let min, max;

    if (pt === 'INF'){ // < 2 Ê≠≤
      const minD = c(d); minD.setFullYear(minD.getFullYear()-2);
      min = toISO(minD); max = toISO(d);
    } else if (pt === 'CHD'){ // 2~11
      const maxD = c(d); maxD.setFullYear(maxD.getFullYear()-2);
      const minD = c(d); minD.setFullYear(minD.getFullYear()-12);
      min = toISO(minD); max = toISO(maxD);
    } else { // ADT >= 12ÔºàÂèØÂÜçÊîæÂØ¨Âà∞ 120Ôºâ
      const maxD = c(d); maxD.setFullYear(maxD.getFullYear()-12);
      const minD = c(d); minD.setFullYear(minD.getFullYear()-120);
      min = toISO(minD); max = toISO(maxD);
    }
    inp.setAttribute('min', min);
    inp.setAttribute('max', max);
  }

