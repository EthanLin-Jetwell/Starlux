  function clampAndSync(e){
    const el = e.target;
    if (!(el instanceof HTMLInputElement)) return;
    if (el.type !== 'date') return;
    const min = el.getAttribute('min');
    const max = el.getAttribute('max');

    if (el.value){
      if (min && el.value < min) el.value = min;
