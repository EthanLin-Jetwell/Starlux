        /* ================== 防回應亂序 ================== */
        let latestSeq = 0;
        
        /* ================== 綁定與初始化 ================== */
        document.addEventListener('DOMContentLoaded', function() {
        loadDepartureList();
        setView('initial');
        updatePaginationUI();
        
        // flightNumber 限制/補零
        const fnEl = document.getElementById('flightNumber');
        if (fnEl) {
        fnEl.addEventListener('input', () => limitFlightInput(fnEl));
        fnEl.addEventListener('blur',  () => formatFlightNumberOnBlur(fnEl));
    }
        
        // 展開區塊初始
        document.querySelectorAll('.detail-content').forEach(c => {
        c.style.maxHeight = '0'; c.style.transition = 'max-height .5s ease';
    });
        updateToggleAllButton();
        
        // SVG Prev / Next
        document.getElementById('btnPrev')?.addEventListener('click', function () {
        if (pageIndex > 0) { pageIndex--; renderPage(); }
    });
        document.getElementById('btnNext')?.addEventListener('click', function () {
        if ((pageIndex + 1) * PAGE_SIZE < currentResults.length) { pageIndex++; renderPage(); }
    });
        
        // 側欄監看
        const sidebar = document.getElementById('sidebar');
        if (sidebar) {
        const obs = new MutationObserver(muts => muts.forEach(m => {
        if (m.type === 'attributes' && m.attributeName === 'class') adjustContentWrapper();
    }));
        obs.observe(sidebar, { attributes: true });
    adjustContentWrapper();
    }
    });
    window.addEventListener('resize', adjustContentWrapper);
    
    /* ================== 查詢送出 ================== */
    document.getElementById('flightSearchForm').addEventListener('submit', function(event) {
        event.preventDefault();
        if (!validateForm()) return;
        
        // 送出前補零一次
        const fnEl = document.getElementById('flightNumber');
        if (fnEl) formatFlightNumberOnBlur(fnEl);
        
        const flightPrefix  = document.getElementById('flightPrefix').value;
        const flightNumber  = document.getElementById('flightNumber').value;
        const departureDate = document.getElementById('departureDate').value;
        const departure     = document.getElementById('departure').value;
        const bookingCodes  = document.getElementById('bookingCodes').value;
        const type          = document.getElementById('type').value;
        
        const seq = ++latestSeq;
        showLoadingMessage();
        
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.HistoryLogController.searchRecords}',
            flightPrefix + '-' + flightNumber,
            departureDate,
            departure,
            bookingCodes,
            type,
            function(result, event) {
                if (seq !== latestSeq) return; // 丟掉舊回應
                hideLoadingMessage();
                
                const toast = document.querySelector('[id$=searcherrorPanel]');
                if (toast) toast.style.display = 'none';
                
                if (!event.status) {
                    currentResults = []; pageIndex = 0;
                    setView('empty'); updatePaginationUI();
                    return;
                }
                
                if (!result || result.length === 0) {
                    currentResults = []; pageIndex = 0;
                    setView('empty');
                    if (toast) { toast.style.display = 'block'; setTimeout(()=>toast.style.display='none', 3000); }
                    updatePaginationUI();
                    return;
                }
                
                // 有資料
                currentResults = result;
                pageIndex = 0;
                renderPage();
            },
            null,
            true // abortable：中止上一個請求
        );
    });
    
    /* ================== 清除 ================== */
    document.getElementById('clearButton').addEventListener('click', function() {
        const form = document.getElementById('flightSearchForm');
        form.reset();
        form.querySelectorAll('.is-invalid').forEach(i => i.classList.remove('is-invalid'));
        form.querySelectorAll('.selectOption.has-error').forEach(p => p.classList.remove('has-error'));
        
        const tbody = document.querySelector('.history-table tbody');
        if (tbody) tbody.innerHTML = '';
        
        const toast = document.querySelector('[id$=searcherrorPanel]');
        if (toast) toast.style.display = 'none';
        
        latestSeq++;               // 讓在路上的回應失效
        currentResults = []; pageIndex = 0;
        updatePaginationUI();
        setView('initial');
    });
    
    function toDateOnly(s){
        if(!s) return '';
        // 先試著抓 yyyy-mm-dd 前 10 碼
        const m = String(s).match(/^(\d{4}-\d{2}-\d{2})/);
        if (m) return m[1];
        // 退而用 Date 解析再組回 yyyy-mm-dd
        const d = new Date(s);
        if (!isNaN(d)) {
            const mm = String(d.getMonth()+1).padStart(2,'0');
            const dd = String(d.getDate()).padStart(2,'0');
            return `${d.getFullYear()}-${mm}-${dd}`;
        }
        return s;
    }
