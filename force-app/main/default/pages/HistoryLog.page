    <script>
        /* ================== 畫面三態 ================== */
        function setView(state) {
        const prompt = document.getElementById('searchPrompt');
        const empty  = document.getElementById('notthingSearchPrompt');
        const list   = document.getElementById('searchResults');
        if (state === 'initial') {
            prompt.style.display = 'block'; empty.style.display = 'none';  list.style.display = 'none';
        } else if (state === 'empty') {
            prompt.style.display = 'none';  empty.style.display  = 'block'; list.style.display = 'none';
        } else { // results
            prompt.style.display = 'none';  empty.style.display  = 'none';  list.style.display = 'block';
        }
    }
    
    /* ================== Loading 遮罩 ================== */
    function showLoadingMessage() {
        const el = document.createElement('div');
        el.id = 'loading';
        el.innerHTML = `
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden" style="color:white">Loading...</span>
                </div>
                </div>`;
                el.style.cssText = 'position:fixed;inset:0;background:rgba(0,0,0,.5);display:flex;justify-content:center;align-items:center;z-index:1000;';
        document.body.appendChild(el);
    }
    function hideLoadingMessage() { document.getElementById('loading')?.remove(); }
    
    /* ================== 起飛地載入 ================== */
    function loadDepartureList() {
    Visualforce.remoting.Manager.invokeAction(
    '{!$RemoteAction.HistoryLogController.getDepartureList}',
        function(result, event) {
    if (!event.status) return;
    const sel = document.getElementById('departure');
    while (sel.options.length > 1) sel.remove(1);
    (result || []).forEach(dep => {
    const o = document.createElement('option'); o.value = dep; o.text = dep; sel.appendChild(o);
                                  });
                                  }
    );
                                  }
    
    /* ================== 表單驗證 ================== */
    function validateForm() {
    const flightNumber  = document.getElementById('flightNumber');
    const departureDate = document.getElementById('departureDate');
    const departure     = document.getElementById('departure');
    const bookingCodes  = document.getElementById('bookingCodes');
    const type          = document.getElementById('type');
    let ok = true;
    [flightNumber, departureDate, departure, bookingCodes, type].forEach(el=>{
    el.classList.remove('is-invalid'); el.closest('.selectOption')?.classList.remove('has-error');
                                  });
    if (!flightNumber.value.trim()) { flightNumber.classList.add('is-invalid'); flightNumber.closest('.selectOption')?.classList.add('has-error'); ok = false; }
    if (!departureDate.value)       { departureDate.classList.add('is-invalid'); departureDate.closest('.selectOption')?.classList.add('has-error'); ok = false; }
    if (!departure.value)           { departure.classList.add('is-invalid');     departure.closest('.selectOption')?.classList.add('has-error');     ok = false; }
    if (!bookingCodes.value.trim()) { bookingCodes.classList.add('is-invalid');  bookingCodes.closest('.selectOption')?.classList.add('has-error');  ok = false; }
    return ok;
                                  }
    
    /* ================== flightNumber 輸入限制 / 補零 ================== */
    function limitFlightInput(el) {
    let raw = el.value.toUpperCase().replace(/[^0-9A-Z]/g, '').slice(0, 5);
    const m = raw.match(/^(\d*)([A-Z]*)$/);
    if (!m) { el.value = raw; return; }
    let num = m[1], letters = m[2];
    if (letters.length === 0) num = num.slice(0, 4);
    else num = num.slice(0, 5 - letters.length);
    el.value = num + letters;
                                  }
    function formatFlightNumberOnBlur(el) {
    let raw = el.value.trim().toUpperCase();
    const m = raw.match(/^(\d*)([A-Z]*)$/);
    if (!m) { el.value = raw; return; }
    let num = m[1], letters = m[2];
    if (letters.length === 0) num = num.padStart(4, '0');
    else num = num.padStart(5 - letters.length, '0');
    el.value = num + letters;
                                  }
    
    /* ================== 展開/收合 ================== */
    function toggleDetail(elementId) {
    const content = document.getElementById(elementId);
    const arrow   = document.getElementById('arrow-' + elementId);
    if (!content) return;
    content.style.transition = 'max-height 1s ease';
    if (content.classList.contains('expanded')) {
    content.classList.remove('expanded'); content.style.maxHeight = '0';
    if (arrow) arrow.innerHTML = '<span class="material-symbols-outlined">expand_circle_up</span>';
                                  } else {
    content.classList.add('expanded'); content.style.maxHeight = '500px';
    if (arrow) arrow.innerHTML = '<span class="material-symbols-outlined">expand_circle_down</span>';
                                  }
    updateToggleAllButton();
                                  }
    function toggleAllDetails() {
    const all = document.querySelectorAll('.detail-content');
    const btn = document.getElementById('toggleAllButton');
    const expand = btn?.textContent.includes('展開');
    all.forEach(dc=>{
    const arrow = document.getElementById('arrow-' + dc.id);
    dc.style.transition = 'max-height 1s ease';
    if (expand) { dc.classList.add('expanded'); dc.style.maxHeight = '500px'; if (arrow) arrow.innerHTML = '<span class="material-symbols-outlined">expand_circle_down</span>'; }
    else        { dc.classList.remove('expanded'); dc.style.maxHeight = '0';   if (arrow) arrow.innerHTML = '<span class="material-symbols-outlined">expand_circle_up</span>'; }
                                  });
    updateToggleAllButton();
                                  }
    function updateToggleAllButton() {
    const expanded = document.querySelectorAll('.detail-content.expanded').length;
    const btn = document.getElementById('toggleAllButton');
    if (btn) btn.textContent = expanded ? '全部收合' : '全部展開';
                                  }
    
    /* ================== 側邊欄 ================== */
    
    (function() {
        var sidebar = document.getElementById('sidebar');
        if (sidebar) {
            sidebar.classList.add('hidden');
            sidebar.classList.remove('normal');
        }
    })();
    function adjustContentWrapper() {
        const sidebar = document.getElementById('sidebar');
        const wrapper = document.getElementById('content-wrapper');
        if (!sidebar || !wrapper) return;
        if (sidebar.classList.contains('hidden')) {
            wrapper.style.paddingLeft = '0';
        } else if (sidebar.classList.contains('normal') && window.innerWidth >= 1025) {
            wrapper.style.paddingLeft = '250px'; wrapper.style.transition = 'padding-left .3s ease-in-out';
        } else {
            wrapper.style.paddingLeft = '0';
        }
    }
    
    /* ================== 分頁（每頁 50） ================== */
    const PAGE_SIZE = 50;
    let currentResults = [];
    let pageIndex = 0;
    
    function updatePaginationUI() {
        const total = currentResults.length;
        const start = total ? (pageIndex * PAGE_SIZE + 1) : 0;
        const end   = Math.min((pageIndex + 1) * PAGE_SIZE, total);
        
        const rangeEl = document.getElementById('pageRange');
        const prevBtn = document.getElementById('btnPrev');
        const nextBtn = document.getElementById('btnNext');
        
        if (rangeEl) rangeEl.textContent = `${start}–${end} of ${total}`;
        
        // Prev 狀態
        if (prevBtn) {
            if (pageIndex === 0) {
                prevBtn.disabled = true; prevBtn.style.color = '#d6ccbd'; prevBtn.style.cursor = 'not-allowed';
            } else {
                prevBtn.disabled = false; prevBtn.style.color = 'inherit'; prevBtn.style.cursor = 'pointer';
            }
        }
        // Next 狀態
        if (nextBtn) {
            if ((pageIndex + 1) * PAGE_SIZE >= total) {
                nextBtn.disabled = true; nextBtn.style.color = '#d6ccbd'; nextBtn.style.cursor = 'not-allowed';
            } else {
                nextBtn.disabled = false; nextBtn.style.color = 'inherit'; nextBtn.style.cursor = 'pointer';
            }
        }
    }
    
    function renderPage() {
        const tbody = document.querySelector('.history-table tbody');
        if (!tbody) return;
        tbody.innerHTML = '';
        
        const total = currentResults.length;
        if (!total) { setView('empty'); updatePaginationUI(); return; }
        
        const start = pageIndex * PAGE_SIZE;
        const end   = Math.min(start + PAGE_SIZE, total);
        
        for (let i = start; i < end; i++) {
            const h = currentResults[i];
            const row = `
            <tr>
                <td class="date-column">                    
