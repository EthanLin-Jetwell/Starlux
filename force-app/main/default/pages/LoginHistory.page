    <script>
        var ADMIN_FLAG           = '{!JSENCODE(Admin)}'; 
        var CURRENT_USER_NAME    = '{!JSENCODE(CurrentUserName)}';
        var CURRENT_USER_COMPANY = '{!JSENCODE(CurrentUserCompany)}';
    </script>
    <script>
        /* ================== 畫面三態 ================== */
        function setView(state) {
        const prompt = document.getElementById('searchPrompt');
        const empty  = document.getElementById('notthingSearchPrompt');
        const list   = document.getElementById('searchResults');
        if (state === 'initial') {
            prompt.style.display = 'block'; empty.style.display = 'none';  list.style.display = 'none';
        } else if (state === 'empty') {
            prompt.style.display = 'none';  empty.style.display  = 'block'; list.style.display = 'none';
        } else { // results
            prompt.style.display = 'none';  empty.style.display  = 'none';  list.style.display = 'block';
        }
    }
    
    /* ================== Loading 遮罩 ================== */
    function showLoadingMessage() {
        const el = document.createElement('div');
        el.id = 'loading';
        el.innerHTML = `
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden" style="color:white">Loading...</span>
                </div>
                </div>`;
                el.style.cssText = 'position:fixed;inset:0;background:rgba(0,0,0,.5);display:flex;justify-content:center;align-items:center;z-index:1000;';
        document.body.appendChild(el);
    }
    function hideLoadingMessage() { document.getElementById('loading')?.remove(); }
    
    /* ================== 下拉選單載入（狀態 / 編號 / 公司） ================== */
    function loadStatusList() {
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.LoginHistoryController.getStatusList}',
            function(result, event) {
                if (!event.status) return;
                const sel = document.getElementById('status');
                while (sel.options.length > 1) sel.remove(1);
                (result || []).forEach(v => {
                    const o = document.createElement('option');
                    o.value = v;
                    o.text  = v;
                    sel.appendChild(o);
                });
            }
        );
    }
    
    function loadUserTempList() {
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.LoginHistoryController.getUserManagementTempList}',
            function(result, event) {
                if (!event.status) return;
                const sel = document.getElementById('userTemp');
                while (sel.options.length > 1) sel.remove(1);
                (result || []).forEach(v => {
                    const o = document.createElement('option');
                    o.value = v;
                    o.text  = v;
                    sel.appendChild(o);
                });
            }
        );
    }
    
    function loadCompanyList() {
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.LoginHistoryController.getCompanyList}',
            function(result, event) {
                if (!event.status) return;
                const sel = document.getElementById('company');
                while (sel.options.length > 1) sel.remove(1);
                (result || []).forEach(v => {
                    const o = document.createElement('option');
                    o.value = v;
                    o.text  = v;
                    sel.appendChild(o);
                });
            }
        );
    }

    
    /* ================== 表單驗證 ================== */
    function validateForm() {
        const loginDate = document.getElementById('loginDate');
        let ok = true;
    
        [loginDate].forEach(el => {
            el.classList.remove('is-invalid');
            el.closest('.selectOption')?.classList.remove('has-error');
        });
    
        if (!loginDate.value) {
            loginDate.classList.add('is-invalid');
            loginDate.closest('.selectOption')?.classList.add('has-error');
            ok = false;
        }
    
        return ok;
    }

    /* ================== flightNumber 輸入限制 / 補零 ================== */
    function limitFlightInput(el) {
    let raw = el.value.toUpperCase().replace(/[^0-9A-Z]/g, '').slice(0, 5);
    const m = raw.match(/^(\d*)([A-Z]*)$/);
    if (!m) { el.value = raw; return; }
    let num = m[1], letters = m[2];
    if (letters.length === 0) num = num.slice(0, 4);
    else num = num.slice(0, 5 - letters.length);
    el.value = num + letters;
                                  }
    function formatFlightNumberOnBlur(el) {
    let raw = el.value.trim().toUpperCase();
    const m = raw.match(/^(\d*)([A-Z]*)$/);
    if (!m) { el.value = raw; return; }
    let num = m[1], letters = m[2];
    if (letters.length === 0) num = num.padStart(4, '0');
    else num = num.padStart(5 - letters.length, '0');
    el.value = num + letters;
                                  }
    

    
    /* ================== 側邊欄 ================== */
    
    (function() {
        var sidebar = document.getElementById('sidebar');
        if (sidebar) {
            sidebar.classList.add('hidden');
            sidebar.classList.remove('normal');
        }
    })();
    function adjustContentWrapper() {
        const sidebar = document.getElementById('sidebar');
        const wrapper = document.getElementById('content-wrapper');
        if (!sidebar || !wrapper) return;
        if (sidebar.classList.contains('hidden')) {
            wrapper.style.paddingLeft = '0';
        } else if (sidebar.classList.contains('normal') && window.innerWidth >= 1025) {
            wrapper.style.paddingLeft = '250px'; wrapper.style.transition = 'padding-left .3s ease-in-out';
        } else {
            wrapper.style.paddingLeft = '0';
        }
    }
    
    /* ================== 分頁（每頁 50） ================== */
    const PAGE_SIZE = 50;
    let currentResults = [];
    let pageIndex = 0;
    
    function updatePaginationUI() {
        const total = currentResults.length;
        const start = total ? (pageIndex * PAGE_SIZE + 1) : 0;
        const end   = Math.min((pageIndex + 1) * PAGE_SIZE, total);
        
        const rangeEl = document.getElementById('pageRange');
        const prevBtn = document.getElementById('btnPrev');
        const nextBtn = document.getElementById('btnNext');
        
        if (rangeEl) rangeEl.textContent = `${start}–${end} of ${total}`;
        
        // Prev 狀態
        if (prevBtn) {
            if (pageIndex === 0) {
                prevBtn.disabled = true; prevBtn.style.color = '#d6ccbd'; prevBtn.style.cursor = 'not-allowed';
            } else {
                prevBtn.disabled = false; prevBtn.style.color = 'inherit'; prevBtn.style.cursor = 'pointer';
            }
        }
        // Next 狀態
        if (nextBtn) {
            if ((pageIndex + 1) * PAGE_SIZE >= total) {
                nextBtn.disabled = true; nextBtn.style.color = '#d6ccbd'; nextBtn.style.cursor = 'not-allowed';
            } else {
                nextBtn.disabled = false; nextBtn.style.color = 'inherit'; nextBtn.style.cursor = 'pointer';
            }
        }
    }
    
    function renderPage() {
        const tbody = document.querySelector('.history-table tbody');
        if (!tbody) return;
        tbody.innerHTML = '';
        
        const total = currentResults.length;
        if (!total) { 
            setView('empty'); 
            updatePaginationUI(); 
            return; 
        }
        
        const start = pageIndex * PAGE_SIZE;
        const end   = Math.min(start + PAGE_SIZE, total);
        
        for (let i = start; i < end; i++) {
            const h = currentResults[i];
            
            // 從後端 LoginHistoryResultWrapper 來的欄位：
            // h.UserManagementTempId, h.Account, h.Company, h.CreatedDate, h.Status
            const createdStr = h.CreatedDateGmtStr || '';
            
            const row = `
            <tr>
                <td>${h.UserManagementTempId || ''}</td>
                <td>${h.Account || ''}</td>
                <td>${h.Company || ''}</td>
                <td class="date-column">${createdStr}</td>
                <td>${h.Status || ''}</td>
            </tr>`;
            
            tbody.insertAdjacentHTML('beforeend', row);
        }
        
        setView('results');
        updatePaginationUI();
    }

        
        /* ================== 防回應亂序 ================== */
        let latestSeq = 0;
        
    /* ================== 綁定與初始化 ================== */
    document.addEventListener('DOMContentLoaded', function() {
        // 狀態不分權限都要
        loadStatusList();
    
        if (ADMIN_FLAG === '0') {
            // 0 = admin → 可以看到全部清單
            loadUserTempList();
            loadCompanyList();
        } else {
            // 1 = user → 鎖定兩個下拉為自己的資料，且不可變更
            const userTempSel = document.getElementById('userTemp');
            if (userTempSel) {
                userTempSel.innerHTML = ''; // 清空原本「請選擇」
                const opt = document.createElement('option');
                opt.value = CURRENT_USER_NAME || '';
                opt.text  = CURRENT_USER_NAME || '';
                userTempSel.appendChild(opt);
                userTempSel.value    = CURRENT_USER_NAME || '';
                userTempSel.disabled = true;
            }
    
            const companySel = document.getElementById('company');
            if (companySel) {
                companySel.innerHTML = '';
                const opt2 = document.createElement('option');
                opt2.value = CURRENT_USER_COMPANY || '';
                opt2.text  = CURRENT_USER_COMPANY || '';
                companySel.appendChild(opt2);
                companySel.value    = CURRENT_USER_COMPANY || '';
                companySel.disabled = true;
            }
        }
    
        setView('initial');
        updatePaginationUI();
            
        const loginInput = document.getElementById('loginDate');
        if (loginInput && !loginInput.value) {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm   = String(today.getMonth() + 1).padStart(2, '0'); // 01-12
            const dd   = String(today.getDate()).padStart(2, '0');      // 01-31
            loginInput.value = `${yyyy}-${mm}-${dd}`;
        }
        // flightNumber 限制/補零
        const fnEl = document.getElementById('flightNumber');
        if (fnEl) {
        fnEl.addEventListener('input', () => limitFlightInput(fnEl));
        fnEl.addEventListener('blur',  () => formatFlightNumberOnBlur(fnEl));
    }
        
        // 展開區塊初始
        document.querySelectorAll('.detail-content').forEach(c => {
        c.style.maxHeight = '0'; c.style.transition = 'max-height .5s ease';
    });
        
        // SVG Prev / Next
        document.getElementById('btnPrev')?.addEventListener('click', function () {
        if (pageIndex > 0) { pageIndex--; renderPage(); }
    });
        document.getElementById('btnNext')?.addEventListener('click', function () {
        if ((pageIndex + 1) * PAGE_SIZE < currentResults.length) { pageIndex++; renderPage(); }
    });
        
        // 側欄監看
        const sidebar = document.getElementById('sidebar');
        if (sidebar) {
        const obs = new MutationObserver(muts => muts.forEach(m => {
        if (m.type === 'attributes' && m.attributeName === 'class') adjustContentWrapper();
    }));
        obs.observe(sidebar, { attributes: true });
    adjustContentWrapper();
    }
    });
    window.addEventListener('resize', adjustContentWrapper);
    
    /* ================== 查詢送出 ================== */
    document.getElementById('flightSearchForm').addEventListener('submit', function(event) {
        event.preventDefault();
        if (!validateForm()) return;
    
        const loginDate = document.getElementById('loginDate').value;
        const status    = document.getElementById('status').value;
        const userTemp  = document.getElementById('userTemp').value;
        const company   = document.getElementById('company').value;
    
        const seq = ++latestSeq;
        showLoadingMessage();
    
        Visualforce.remoting.Manager.invokeAction(
            '{!$RemoteAction.LoginHistoryController.searchRecords}',
            loginDate,
            status,
            userTemp,
            company,
            function(result, event) {
                if (seq !== latestSeq) return; // 丟掉舊回應
                hideLoadingMessage();
                
                console.log('searchRecords result = ', result, 'event = ', event);
    
                const toast = document.querySelector('[id$=searcherrorPanel]');
                if (toast) toast.style.display = 'none';
    
                if (!event.status) {
                    currentResults = []; pageIndex = 0;
                    setView('empty'); updatePaginationUI();
                    return;
                }
    
                if (!result || result.length === 0) {
                    currentResults = []; pageIndex = 0;
                    setView('empty');
                    if (toast) { toast.style.display = 'block'; setTimeout(()=>toast.style.display='none', 3000); }
                    updatePaginationUI();
                    return;
                }
    			
                // 有資料
                currentResults = result;
                pageIndex = 0;
                renderPage();
            },
            null,
            true // abortable
        );
    });


    /* ================== 清除 ================== */
    document.getElementById('clearButton').addEventListener('click', function() {
        const form = document.getElementById('flightSearchForm');
        form.reset();
        
        // ★ 清除完把登入日期改回今天
        const loginDateInput = document.getElementById('loginDate');
        if (loginDateInput) {
            const today = new Date();
            const yyyy = today.getFullYear();
            const mm   = String(today.getMonth() + 1).padStart(2, '0');
            const dd   = String(today.getDate()).padStart(2, '0');
            loginDateInput.value = `${yyyy}-${mm}-${dd}`;
        }
    
        form.querySelectorAll('.is-invalid').forEach(i => i.classList.remove('is-invalid'));
        form.querySelectorAll('.selectOption.has-error').forEach(p => p.classList.remove('has-error'));
        
        const tbody = document.querySelector('.history-table tbody');
        if (tbody) tbody.innerHTML = '';
        
        const toast = document.querySelector('[id$=searcherrorPanel]');
        if (toast) toast.style.display = 'none';
        
        latestSeq++;               // 讓在路上的回應失效
        currentResults = []; 
        pageIndex = 0;
        updatePaginationUI();
        setView('initial');
    
        // ★ 一般使用者要把下拉鎖回來
        if (ADMIN_FLAG === '1') {
            const userTempSel = document.getElementById('userTemp');
            if (userTempSel) {
                userTempSel.innerHTML = '';
                const opt = document.createElement('option');
                opt.value = CURRENT_USER_NAME || '';
                opt.text  = CURRENT_USER_NAME || '';
                userTempSel.appendChild(opt);
                userTempSel.value    = CURRENT_USER_NAME || '';
                userTempSel.disabled = true;
            }
    
            const companySel = document.getElementById('company');
            if (companySel) {
                companySel.innerHTML = '';
                const opt2 = document.createElement('option');
                opt2.value = CURRENT_USER_COMPANY || '';
                opt2.text  = CURRENT_USER_COMPANY || '';
                companySel.appendChild(opt2);
                companySel.value    = CURRENT_USER_COMPANY || '';
                companySel.disabled = true;
            }
        }
    });


    
    function toDateOnly(s){
        if(!s) return '';
        // 先試著抓 yyyy-mm-dd 前 10 碼
        const m = String(s).match(/^(\d{4}-\d{2}-\d{2})/);
        if (m) return m[1];
        // 退而用 Date 解析再組回 yyyy-mm-dd
        const d = new Date(s);
        if (!isNaN(d)) {
            const mm = String(d.getMonth()+1).padStart(2,'0');
            const dd = String(d.getDate()).padStart(2,'0');
            return `${d.getFullYear()}-${mm}-${dd}`;
        }
        return s;
    }
