<apex:page standardController="Lucky_Draw_Setting__c" extensions="LuckyDrawController">
    <style>
        .centered-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
        
        .centered-container .btn {
            display: inline-block;
            padding: 15px 20px;
            font-size: 20px;
            border: none;
            color: black;
            cursor: pointer;
            border-radius: 5px;
        }
        
        .div-cover
        {
        	position: absolute;
    		top: 0;
    		left: 0;
    		width: 100%;
        	height:100%;
    		z-index: 10;
    		background-color: rgba(0,0,0,0);
        }
        
        #loading-div img{
        	margin: 0 auto;
    		display: block;
        	max-width: 150px;
        }
    </style>
    
    <body>
        <div class="centered-container">
            <apex:form style="font-family: Arial Unicode MS, Microsoft JhengHei, sans-serif;">
                <!--
                <apex:actionStatus id="drawingStatus">
                    <apex:facet name="start">
                        <div id="loading-div" >
                            <div class="text-center" id="image-container" rendered="{!drawing}">
                                <img src="{!$Resource.Loading}"/>
                            </div>
                        </div>
                    </apex:facet>
                </apex:actionStatus>
                -->
                <table style="padding: 15px;">
                    <tr>
                        <td>
                            <apex:commandButton value="Draw" action="{!draw}">
                                <!--<apex:actionSupport event="onclick" status="drawingStatus" reRender="loading-div"/>-->
                            </apex:commandButton>
                        </td>
                        <td>
                            <apex:commandButton value="Save" action="{!save}" styleClass="btn"/>
                        </td>
                    </tr>
                </table>
                <apex:outputPanel id="section">
                    <apex:repeat var="a" value="{!winners}">
                        <apex:outputText value="{!a.Name}"/>
                    </apex:repeat>
                </apex:outputPanel>
                <apex:pageBlock title=" Test">
                    <apex:pageBlockSection >
                        <apex:commandButton value="Draw" action="{!draw}"/>
                        <apex:outputPanel id="section">
                            <apex:repeat var="winner" value="{!winners}">
                                <apex:outputText value="{!winner}"/>
                            </apex:repeat>
                        </apex:outputPanel>
                    </apex:pageBlockSection>
                </apex:pageBlock>
                
            </apex:form>
        </div>
    </body>
</apex:page>